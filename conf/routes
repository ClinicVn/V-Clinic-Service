# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomeController.index()

POST    /login                      controllers.SecurityController.login()
POST    /logout                     controllers.SecurityController.logout()

# Routes API Rest
GET     /employees                  controllers.EmployeeController.list(page: Integer ?= 1, size: Integer ?= 3)
GET     /employees/$id<[0-9]+>      controllers.EmployeeController.get(id: Integer)
POST    /employees                  controllers.EmployeeController.create()
PUT     /employees                  controllers.EmployeeController.update()
PATCH   /employees                  controllers.EmployeeController.update()
DELETE  /employees/$id<[0-9]+>      controllers.EmployeeController.delete(id: Integer)

GET     /users                  controllers.UserController.list(page: Integer ?= 1, size: Integer ?= 3)
GET     /users/$id<[0-9]+>      controllers.UserController.get(id: Integer)
POST    /users                  controllers.UserController.create()
PUT     /users                  controllers.UserController.update()
PATCH   /users                  controllers.UserController.update()
DELETE  /users/$id<[0-9]+>      controllers.UserController.delete(id: Integer)




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

